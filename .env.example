# SMATRX V3 - Environment Configuration
# Copy this file to .env.local and fill in your actual values

# ============================================
# DATABASE
# ============================================
DATABASE_URL="postgresql://username:password@localhost:5432/smatrx_db?schema=public"

# ============================================
# NEXTAUTH CONFIGURATION
# ============================================
NEXTAUTH_URL="http://localhost:3002"
NEXTAUTH_SECRET="your-super-secret-key-min-32-chars-long"

# ============================================
# PHASE 1: EXISTING OAUTH PROVIDERS
# ============================================

# GitHub OAuth
GITHUB_CLIENT_ID="your-github-client-id"
GITHUB_CLIENT_SECRET="your-github-client-secret"

# Google OAuth
GOOGLE_CLIENT_ID="your-google-client-id.apps.googleusercontent.com"
GOOGLE_CLIENT_SECRET="your-google-client-secret"

# LinkedIn OAuth
LINKEDIN_CLIENT_ID="your-linkedin-client-id"
LINKEDIN_CLIENT_SECRET="your-linkedin-client-secret"

# ============================================
# AI SERVICES
# ============================================
OPENAI_API_KEY="sk-your-openai-api-key"

# ============================================
# PHASE 2: SOCIAL MEDIA INTEGRATIONS
# ============================================

# Twitter/X OAuth 2.0
# Get credentials from: https://developer.twitter.com/
TWITTER_CLIENT_ID="your-twitter-client-id"
TWITTER_CLIENT_SECRET="your-twitter-client-secret"

# Instagram Graph API
# Get credentials from: https://developers.facebook.com/
INSTAGRAM_CLIENT_ID="your-instagram-app-id"
INSTAGRAM_CLIENT_SECRET="your-instagram-app-secret"

# YouTube Data API v3
# Get credentials from: https://console.cloud.google.com/
YOUTUBE_API_KEY="your-youtube-api-key"

# ============================================
# PHASE 2: EDUCATION VERIFICATION
# ============================================

# DigiLocker API (India)
# Register at: https://www.digilocker.gov.in/
DIGILOCKER_CLIENT_ID="your-digilocker-client-id"
DIGILOCKER_CLIENT_SECRET="your-digilocker-client-secret"

# ============================================
# PHASE 2: CERTIFICATION VERIFICATION
# ============================================

# Coursera API (if available)
COURSERA_API_KEY="your-coursera-api-key"

# ============================================
# PHASE 2: FILE STORAGE (for document uploads)
# ============================================

# AWS S3 Configuration
AWS_REGION="us-east-1"
AWS_ACCESS_KEY_ID="your-aws-access-key"
AWS_SECRET_ACCESS_KEY="your-aws-secret-key"
AWS_S3_BUCKET="smatrx-documents"

# Or use Cloudflare R2 (S3-compatible)
# R2_ACCOUNT_ID="your-r2-account-id"
# R2_ACCESS_KEY_ID="your-r2-access-key"
# R2_SECRET_ACCESS_KEY="your-r2-secret-key"
# R2_BUCKET="smatrx-documents"

# ============================================
# PHASE 3: BACKGROUND JOBS & QUEUE SYSTEM
# ============================================

# Redis for job queue (BullMQ) - REQUIRED for Phase 3
# Development: Use local Redis or Upstash free tier
# Production: Use Upstash Redis (recommended)
REDIS_HOST="localhost"
REDIS_PORT="6379"
REDIS_PASSWORD=""
REDIS_TLS="false"

# OR use Redis URL format (Upstash/Railway provides this)
REDIS_URL="redis://default:password@your-redis.upstash.io:6379"

# Queue Configuration
MAX_CONCURRENT_JOBS="10"
JOB_TIMEOUT_MS="120000"
ENABLE_BACKGROUND_JOBS="true"

# ============================================
# PHASE 3: EMAIL NOTIFICATIONS
# ============================================

# SMTP Configuration (REQUIRED for notifications)
SMTP_HOST="smtp.sendgrid.net"
SMTP_PORT="587"
SMTP_SECURE="false"
SMTP_USER="apikey"
SMTP_PASS="SG.your-sendgrid-api-key"

# Email sender configuration
EMAIL_FROM="SMATRX Career Platform <noreply@smatrx.io>"
ADMIN_EMAIL="admin@smatrx.io"

# Enable/disable email types
ENABLE_EMAIL_NOTIFICATIONS="true"
ENABLE_SYNC_NOTIFICATIONS="true"
ENABLE_CREDIBILITY_UPDATES="true"
ENABLE_VERIFICATION_EMAILS="true"

# ============================================
# PHASE 4: PUBLIC PROFILES
# ============================================

# Base URL for public profiles
PUBLIC_PROFILE_BASE_URL="https://smatrx.io"

# Custom domain support (premium feature)
ENABLE_CUSTOM_DOMAINS="false"

# ============================================
# ANALYTICS & MONITORING (Optional)
# ============================================

# Vercel Analytics
NEXT_PUBLIC_VERCEL_ANALYTICS="false"

# Sentry Error Tracking
SENTRY_DSN="your-sentry-dsn"

# PostHog Analytics
NEXT_PUBLIC_POSTHOG_KEY="your-posthog-key"
NEXT_PUBLIC_POSTHOG_HOST="https://app.posthog.com"

# ============================================
# LEGACY EMAIL CONFIG (Use Phase 3 SMTP config above)
# ============================================

# SendGrid (legacy - use SMTP_* variables above)
# SENDGRID_API_KEY="your-sendgrid-api-key"
# SENDGRID_FROM_EMAIL="noreply@smatrx.io"

# Or AWS SES (legacy)
# AWS_SES_REGION="us-east-1"
# AWS_SES_FROM_EMAIL="noreply@smatrx.io"

# ============================================
# FEATURE FLAGS
# ============================================

# Enable/disable features during development
ENABLE_CREDIBILITY_SCORING="true"
ENABLE_AI_RECOMMENDATIONS="true"
ENABLE_PUBLIC_PROFILES="false"
ENABLE_VERIFICATION_WORKFLOW="true"
ENABLE_DOCUMENT_UPLOAD="true"
ENABLE_ADMIN_DASHBOARD="true"
ENABLE_AI_INSIGHTS="true"

# ============================================
# DEVELOPMENT OPTIONS
# ============================================

# Set to "development" or "production"
NODE_ENV="development"

# Enable debug logging
DEBUG="false"

# Skip email verification for development
SKIP_EMAIL_VERIFICATION="true"
